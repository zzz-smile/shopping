.swiper_img{
  /* display: block; */
  height: 120px;
}

.swiper-item{
  display: block;
  width: 100%;
  height: 100%;
}


.menu_view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8rpx;
  margin: 16px 16px 2px 16px;
  background-color: #fff;
}

.menu_item{
  font-size: 14px;
  color: #939393;
  margin-top: 8rpx;
  
}

.image{
    width: 66rpx; 
    height: 66rpx;
}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 16px;
    color: #656565;
}

.product_box {
    padding: 0 10rpx;
}

.product_item {
    display: inline-block;
    width: 49%;
    margin: 0 0.5%;
}

.product_item image{
    width: 100%;
    height: 90px;
}

.tab-active{
  color:red;
  border-bottom: solid 1px red;
}
.tab-hide{
  display: none;  
}

.tab-show{
  display: block;
}